<!DOCTYPE html>
<html>
<head>
  <title>Collageio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
  <!-- Session User ID: <%= session[:user_id] %> -->
  <div class="pull-right">
    <% if current_user %>
        Logged in as: <%= current_user.username %> | <%= link_to 'Logout', logout_path %> |
        <%= link_to "Todays posts", posts_path %>
      <% else %> 
        <%= link_to 'Login', login_path %> or <%= link_to 'Join', signup_path %> 
      <% end %>
    </div>

  <h2><%= link_to "Collageio", root_path %></h2>

  <%= yield %>
  </div>
</body>
</html>
